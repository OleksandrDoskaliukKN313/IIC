package servlets;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class TranslateHandler
 */
public class TranslateHandler extends HttpServlet {
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		System.out.println(req.getParameter("ua"));
		resp.setContentType("good");
		RequestDispatcher requestDispatcher = req.getRequestDispatcher("en_ua.jsp");
		requestDispatcher.forward(req, resp);
	}
}
